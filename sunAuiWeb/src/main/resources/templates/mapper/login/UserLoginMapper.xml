<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wy.mapper.login.UserLoginMapper">
	<resultMap id="BaseResultMap" type="com.wy.entity.login.UserLogin">
		<result column="id" property="id" />
		<result column="username" property="username" />
		<result column="password" property="password" />
	</resultMap>

	<parameterMap id="UserLogin" type="com.wy.entity.login.UserLogin"/>

	<sql id="Base_Column_List">
		id, username,password
	</sql>

	<select id="login" resultMap="BaseResultMap" parameterMap="UserLogin">
		select
		<include refid="Base_Column_List" />
		from user_login where username = #{username}
	</select>

</mapper>
